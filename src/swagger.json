{
  "openapi": "3.0.0",
  "info": {
    "title": "Desafio Introdução ao SOLID",
    "description": "An api for doing common Users operations, such as creating, listing, and giving them admin access.",
    "version": "1.0.0",
    "contact": {
      "email": "arturminelli@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Creates a new User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "object": "User",
                "properties": {
                  "name" : {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Example Name",
                  "email": "examplename@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "42881ca2-f86b-4c58-bd95-cc5057d39b00",
                  "admin": false,
                  "name": "Artur Minelli Peixoto",
                  "email": "arturminelli@gmail.com",
                  "created_at": "2022-11-21T11:14:02.044Z",
                  "updated_at": "2022-11-21T11:14:02.044Z"
                }
              }
            }
          },
          "400": {
            "description": "Email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "Email arturminelli@gmail.com already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "Lists all of the registered users",
        "description": "Only admin users can request this operation",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "description": "The id of the user that is making the request"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                },
                "example": [
                  {
                    "id": "42881ca2-f86b-4c58-bd95-cc5057d39b00",
                    "admin": false,
                    "name": "Artur Minelli Peixoto",
                    "email": "arturminelli@gmail.com",
                    "created_at": "2022-11-21T11:14:02.044Z",
                    "updated_at": "2022-11-21T11:14:02.044Z"
                  },
                  {
                    "id": "42881ca2-f86b-4c58-bd95-cc5057d39b00",
                    "admin": false,
                    "name": "Artur Minelli Peixoto",
                    "email": "arturminelli@gmail.com",
                    "created_at": "2022-11-21T11:14:02.044Z",
                    "updated_at": "2022-11-21T11:14:02.044Z"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "User does not exist or not authorized to list all users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "User with id 42881ca2-f86b-4c58-bd95-cc5057d39b00 does not exist"
                }
              }
            }
          }
        }
      }
    }
  }
}